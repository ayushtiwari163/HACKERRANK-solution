#include<stdio.h>
int main()
{ 
 long int a[100000],i,n,count=0,j,t;
  scanf("%ld" ,&n);
  for(i=0;i<n;i++)
  {
    scanf("%ld" ,&a[i]);
  }
  t=a[0];
  for(i=0;i<n;i++)
  {
    if(a[i]>t)
    t=a[i];
  }
  for(i=0;i<n;i++)
  {
    if(t==a[i])
    {
      count++;
    }
  }
  printf("%ld" ,count);
}
